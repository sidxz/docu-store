# Application
APP_NAME=TodoApp2
APP_ENV=development
LOG_LEVEL=INFO

# EventStoreDB
EVENTSTOREDB_URI=esdb://localhost:2113?tls=false

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC=todo_events

# API
API_HOST=0.0.0.0
API_PORT=8000

# MongoDB Read Models
MONGO_URI=mongodb://localhost:27017
MONGO_DB=todoapp2
MONGO_TASKS_COLLECTION=task_read_models
MONGO_PROJECTS_COLLECTION=project_read_models
MONGO_TRACKING_COLLECTION=read_model_tracking
